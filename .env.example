# GlobalNews Letter Configuration
# Copy this file to .env and update values for your environment

# ============================================
# ENVIRONMENT
# ============================================
NODE_ENV=development
API_PORT=3333
API_HOST=127.0.0.1
DEBUG=false

# ============================================
# DATABASE
# ============================================
DATABASE_PATH=./data/enhanced-rss.db
DATABASE_BACKUP_PATH=./data/backups
DATABASE_WAL_MODE=true
DATABASE_MAX_CONNECTIONS=10

# ============================================
# SECURITY & AUTH
# ============================================
JWT_SECRET=your-super-secure-jwt-secret-key-replace-in-production
JWT_ISSUER=globalnews-letter
JWT_AUDIENCE=globalnews-app
JWT_EXPIRY=1h
API_KEY=your-api-key-for-internal-services

# ============================================
# CORS & RATE LIMITING
# ============================================
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
RATE_LIMIT_RPS=10
RATE_LIMIT_WINDOW_MS=60000

# ============================================
# TRANSLATION SERVICES
# ============================================
LLM_PROVIDER=openai
LLM_API_KEY=your-llm-api-key-here
LLM_MODEL=gpt-4
LLM_BASE_URL=https://api.openai.com/v1
LLM_MAX_TOKENS=4000
LLM_TEMPERATURE=0.3

# Translation Pipeline
MAX_CONCURRENT_TRANSLATIONS=3
TRANSLATION_QUEUE_MAX_SIZE=1000
TRANSLATION_RETRY_ATTEMPTS=3
TRANSLATION_TIMEOUT_MS=30000

# ============================================
# RSS FEED PROCESSING
# ============================================
RSS_USER_AGENT=GlobalNews Letter/1.0
RSS_TIMEOUT_MS=15000
RSS_MAX_CONCURRENT_FEEDS=5
RSS_RETRY_ATTEMPTS=3
RSS_RETRY_DELAY_MS=1000

# Feed Processing Intervals (minutes)
REALTIME_REFRESH_MINUTES=5
FREQUENT_REFRESH_MINUTES=30
STANDARD_REFRESH_MINUTES=120
SLOW_REFRESH_MINUTES=480

# ============================================
# HEALTH MONITORING
# ============================================
HEALTH_CHECK_INTERVAL_MS=300000
HEALTH_METRICS_RETENTION_DAYS=30
ALERT_WEBHOOK_URL=
ALERT_EMAIL_RECIPIENT=

# Performance Thresholds
MAX_RESPONSE_TIME_MS=5000
MIN_FEED_RELIABILITY=0.7
MIN_TRANSLATION_QUALITY=0.75
MAX_QUEUE_BACKLOG=200

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE_PATH=./logs/app.log
LOG_MAX_FILES=5
LOG_MAX_SIZE=10MB

# ============================================
# FEATURE FLAGS
# ============================================
ENABLE_TRANSLATIONS=true
ENABLE_ANALYTICS=true
ENABLE_HEALTH_MONITORING=true
ENABLE_AUTO_RETRY=true
ENABLE_ADAPTIVE_REFRESH=true

# ============================================
# EXTERNAL SERVICES
# ============================================
WEBHOOK_NOTIFICATIONS_URL=
SLACK_WEBHOOK_URL=
EMAIL_SMTP_HOST=
EMAIL_SMTP_PORT=587
EMAIL_SMTP_USER=
EMAIL_SMTP_PASS=

# ============================================
# DEVELOPMENT
# ============================================
DEV_MOCK_LLM=false
DEV_MOCK_RSS=false
DEV_SEED_DATA=true
DEV_SKIP_AUTH=false